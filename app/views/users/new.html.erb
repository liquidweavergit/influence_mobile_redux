<div class="d-flex justify-content-center vh-90 center pt-2">
  <div class="card shadow" style="width: 50%;">
    <h5 class="card-header">
      New User
    </h5>
    <div class="card-body">
      <%= render "form",
                 offer: @user,
                 is_new_user: true,
                 button_text: 'Create' %>

    </div>
    <div class="card-footer">
      <%= link_to "Cancel", url_for(:back), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>