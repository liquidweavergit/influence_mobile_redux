<div class="d-flex justify-content-center vh-90 center pt-2">
  <div class="card shadow" style="width: 50%;">
    <h5 class="card-header"><%= @user.email %></h5>
    <div class="card-body">
      <div class="row">
        Username:
        <%= @user.username %>
      </div>
      <div class="row">
        Name:
        <%= @user.first_name %> <%= @user.last_name %>
      </div>
      <div class="row">
        Birth Date:
        <%= @user.birthdate %>
      </div>
      <div class="row">
        Gender:
        <%= @user.gender %>
      </div>
      <div class="row">
        Admin:
        <%= @user.admin %>
      </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <%= link_to "Back", users_path, class: 'btn btn-secondary' %>
      <%= link_to "Edit", edit_user_path(@user), class: 'btn btn-primary' %>
      <% if @user != current_user %>
        <%= button_to "Destroy", @user, method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>

