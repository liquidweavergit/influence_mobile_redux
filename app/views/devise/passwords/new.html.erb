<div class="d-flex justify-content-center vh-100 align-items-center">
  <div class="card shadow" style="width: 30rem;">
    <h5 class="card-header">Forgot your password?</h5>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html=>{  class: "needs-validation", novalidate: true }) do |f| %>
        <div class="form-group row col-sm-12">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="form-group row col-sm-12">
          <%= f.label :email, class: "col-sm-12 col-form-label" %><br />
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "form-control is-invalid",
                            required: 'true' %>
        </div>

        <div class="form-group row pt-2 col-sm-12 text-end pt-3">
          <div class="col-sm-12">
            <%= f.submit "Send me reset password instructions", html={ class: "btn btn-primary mb-2" } %>
          </div>
        </div>
      <% end %>

    </div>
    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
