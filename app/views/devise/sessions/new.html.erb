<div class="d-flex justify-content-center vh-90 center pt-2">
  <div class="card shadow" style="width: 30rem;">
    <h5 class="card-header">Log in</h5>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row col-sm-12">
          <%= f.label :email, class: "col-sm-12 col-form-label" %>
          <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            class: "form-control is-invalid" %>
        </div>
        <div class="form-group row col-sm-12 pt-3">
          <%= f.label :password, class: "col-sm-12 col-form-label" %>
          <%= f.password_field :password,
                               autocomplete: "current-password",
                               class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-control row col-sm-12 pt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="form-group row pt-2 col-sm-12 text-end pt-3">
          <div class="col-sm-12">
            <%= f.submit "Log in", html={ class: "btn btn-primary mb-2" } %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>